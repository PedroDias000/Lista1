#include <stdio.h>

int main() {
    int segundos, minutos, horas;

    printf("Digite o tempo em segundos: ");
    scanf("%d", &segundos);

    horas = segundos / 3600;   
    segundos %= 3600;           

    minutos = segundos / 60;    
    segundos %= 60;          

    printf("Tempo: %d horas, %d minutos, %d segundos\n", horas, minutos, segundos);

    return 0;
}
