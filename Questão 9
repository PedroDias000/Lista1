#include <stdio.h>

int main() {
    int valor;


    printf("Digite um valor inteiro: ");
    scanf("%d", &valor);


    int antecessor = valor - 1;
    int sucessor = valor + 1;


    printf("Valor lido: %d\n", valor);
    printf("Antecessor: %d\n", antecessor);
    printf("Sucessor: %d\n", sucessor);

    return 0;
}
